<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40sp"
        android:background="#FADDAF"
        app:cardBackgroundColor="#FADDAF"
        android:layout_marginTop="-40sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38sp"
            android:layout_marginRight="38sp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jadwal Sholat"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:fontFamily="@font/sniglet"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mosque"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <ImageView
                                android:id="@+id/list1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/list"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="7sp"/>

                            <TextView
                                android:layout_toRightOf="@+id/list1"
                                android:id="@+id/sbh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Shubuh"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:fontFamily="@font/sniglet"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/list1"
                                android:layout_below="@+id/sbh"
                                android:id="@+id/txt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#000"
                                android:fontFamily="@font/sniglet"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <ImageView
                                android:id="@+id/list2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/list"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="7sp"/>

                            <TextView
                                android:layout_toRightOf="@+id/list2"
                                android:id="@+id/dha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Dhuha"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:fontFamily="@font/sniglet"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/list2"
                                android:layout_below="@+id/dha"
                                android:id="@+id/txt6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#000"
                                android:fontFamily="@font/sniglet"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <ImageView
                                android:id="@+id/list3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/list"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="7sp"/>

                            <TextView
                                android:layout_toRightOf="@+id/list3"
                                android:id="@+id/dhr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Dhuhur"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:fontFamily="@font/sniglet"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/list3"
                                android:layout_below="@+id/dhr"
                                android:id="@+id/txt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#000"
                                android:fontFamily="@font/sniglet"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <ImageView
                                android:id="@+id/list4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/list"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="7sp"/>

                            <TextView
                                android:layout_toRightOf="@+id/list4"
                                android:id="@+id/ash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Ashar"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:fontFamily="@font/sniglet"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/list4"
                                android:layout_below="@+id/ash"
                                android:id="@+id/txt3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#000"
                                android:fontFamily="@font/sniglet"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <ImageView
                                android:id="@+id/list5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/list"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="7sp"/>

                            <TextView
                                android:layout_toRightOf="@+id/list5"
                                android:id="@+id/mgr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Magrib"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:fontFamily="@font/sniglet"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/list5"
                                android:layout_below="@+id/mgr"
                                android:id="@+id/txt4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#000"
                                android:fontFamily="@font/sniglet"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="0sp"
                        app:cardElevation="5dp"
                        android:layout_marginBottom="23dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10sp">

                            <ImageView
                                android:id="@+id/list6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/list"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="7sp"/>

                            <TextView
                                android:layout_toRightOf="@+id/list6"
                                android:id="@+id/ish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sholat Isha'"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="18dp"
                                android:fontFamily="@font/sniglet"
                                />

                            <TextView
                                android:layout_toRightOf="@+id/list6"
                                android:layout_below="@+id/ish"
                                android:id="@+id/txt5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hello World!"
                                android:textColor="#000"
                                android:fontFamily="@font/sniglet"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38sp"
        android:layout_marginRight="38sp"
        android:layout_marginTop="23dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti Jadwal Sholat"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25sp"
            android:fontFamily="@font/sniglet"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0sp"
                    app:cardBackgroundColor="#CCCCCC"
                    app:cardElevation="5dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="23sp">

                    <EditText
                        android:id="@+id/shubuh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sholat Shubuh"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/sniglet"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0sp"
                    app:cardBackgroundColor="#CCCCCC"
                    app:cardElevation="5dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="23sp">

                    <EditText
                        android:id="@+id/dhuha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sholat Dhuha"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/sniglet"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0sp"
                    app:cardBackgroundColor="#CCCCCC"
                    app:cardElevation="5dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="23sp">

                    <EditText
                        android:id="@+id/dhuhur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sholat Dhuhur"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/sniglet"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0sp"
                    app:cardBackgroundColor="#CCCCCC"
                    app:cardElevation="5dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="23sp">

                    <EditText
                        android:id="@+id/ashar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sholat Ashar"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/sniglet"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0sp"
                    app:cardBackgroundColor="#CCCCCC"
                    app:cardElevation="5dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="23sp">

                    <EditText
                        android:id="@+id/maghrib"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sholat Magrib"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/sniglet"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0sp"
                    app:cardBackgroundColor="#CCCCCC"
                    app:cardElevation="5dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="23sp">

                    <EditText
                        android:id="@+id/isha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Sholat Isha'"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/sniglet"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FADDAF"
                app:cardBackgroundColor="#FADDAF"
                app:cardCornerRadius="5sp"
                app:cardElevation="3sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:textStyle="bold"
                    android:fontFamily="@font/sniglet"
                    android:textSize="15dp"
                    android:layout_margin="10sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnkembali2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FADDAF"
                app:cardBackgroundColor="#FADDAF"
                app:cardCornerRadius="5sp"
                app:cardElevation="3sp"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:textStyle="bold"
                    android:fontFamily="@font/sniglet"
                    android:textSize="15dp"
                    android:layout_margin="10sp"/>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>